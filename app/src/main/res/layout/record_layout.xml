<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:alwaysDrawnWithCache="false"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:alpha="0.8"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:alpha="0.4"
        android:background="@drawable/iu_campus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNumOfRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/color_one"
            android:fontFamily="@font/airbnb_cereal_bold"
            app:textAllCaps="false"
            tools:text="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Date created:"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                app:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/airbnb_cereal_bold"/>

            <TextView
                android:id="@+id/txtRecordDateC"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ID:"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_bold"
                app:textAllCaps="false" />

            <TextView
                android:id="@+id/txtRecordID"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Full name:"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_bold"
                app:textAllCaps="false" />

            <TextView
                android:id="@+id/txtRecordFName"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Status:"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_bold"
                app:textAllCaps="false" />

            <TextView
                android:id="@+id/txtRecordStatus"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Entry permit:"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:fontFamily="@font/airbnb_cereal_bold"
                app:textAllCaps="false" />

            <TextView
                android:id="@+id/txtRecordEntry"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/airbnb_cereal_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Temp â„ƒ:"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:fontFamily="@font/airbnb_cereal_bold"
                app:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtRecordTemp"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="16sp"
                android:fontFamily="@font/airbnb_cereal_medium"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>